<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="fun.xilei.humordemo.music.MusicPlayModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="230dp"
            android:layout_height="207dp"
            android:layout_marginTop="101dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="82dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.722"
            app:srcCompat="@mipmap/list" />

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="83dp"
            android:layout_height="50dp"
            android:layout_marginStart="99dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_next"
            app:layout_constraintStart_toEndOf="@+id/iv_prev"
            app:layout_constraintStart_toStartOf="@+id/iv_prev"
            app:layout_constraintTop_toTopOf="@+id/iv_next"
            app:srcCompat="@mipmap/play" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="83dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_prev"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/iv_play"
            app:layout_constraintTop_toTopOf="@+id/iv_prev"
            app:layout_constraintVertical_bias="0.722"
            app:srcCompat="@mipmap/next" />

        <ImageView
            android:id="@+id/iv_prev"
            android:layout_width="83dp"
            android:layout_height="50dp"
            android:layout_marginStart="98dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_list"
            app:layout_constraintStart_toEndOf="@+id/iv_list"
            app:layout_constraintStart_toStartOf="@+id/iv_list"
            app:layout_constraintTop_toTopOf="@+id/iv_list"
            app:srcCompat="@mipmap/prev" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="265dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:singleLine="true"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover"
            app:layout_constraintVertical_bias="0.049" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>